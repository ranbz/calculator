<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="calculator.good.calculator.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/linearLayout6"
        android:weightSum="2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/msg_tv"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="#ffffff"
            android:textSize="35dp"
            android:textColor="#000000"
            android:singleLine="true"
            android:gravity="start|center_vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_weight="1"
            android:textIsSelectable="true"
            android:textAlignment="gravity" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/rslt_tv"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="#ffffff"
            android:textSize="35dp"
            android:textColor="#000000"
            android:singleLine="true"
            android:gravity="start|center_vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_weight="1"
            android:textAlignment="gravity" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="262dp"
        android:layout_height="90dp"
        android:id="@+id/linearLayout2"
        android:layout_above="@+id/linearLayout3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:text="4"
            android:id="@+id/btn_4"
            android:elegantTextHeight="false"
            android:textSize="40dp"
            android:background="@android:color/transparent"
            android:onClick="currNbtn"
            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
            android:textColor="#fff" />

        <Button
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:text="5"
            android:id="@+id/btn_5"
            android:elegantTextHeight="false"
            android:textSize="40dp"
            android:background="@android:color/transparent"
            android:onClick="currNbtn"
            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
            android:textColor="#fff" />

        <Button
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:text="6"
            android:id="@+id/btn_6"
            android:elegantTextHeight="false"
            android:textSize="40dp"
            android:background="@android:color/transparent"
            android:onClick="currNbtn"
            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
            android:textColor="#fff" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="262dp"
        android:layout_height="90dp"
        android:id="@+id/linearLayout3"
        android:layout_above="@+id/linearLayout5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:text="1"
            android:id="@+id/btn_1"
            android:elegantTextHeight="false"
            android:textSize="40dp"
            android:background="@android:color/transparent"
            android:onClick="currNbtn"
            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
            android:textColor="#fff" />

        <Button
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:text="2"
            android:id="@+id/btn_2"
            android:elegantTextHeight="false"
            android:textSize="40dp"
            android:background="@android:color/transparent"
            android:onClick="currNbtn"
            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
            android:textColor="#fff" />

        <Button
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:text="3"
            android:id="@+id/btn_3"
            android:elegantTextHeight="false"
            android:textSize="40dp"
            android:background="@android:color/transparent"
            android:onClick="currNbtn"
            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
            android:textColor="#fff" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="262dp"
        android:layout_height="90dp"
        android:id="@+id/linearLayout5"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:text="."
            android:id="@+id/btn_dot"
            android:elegantTextHeight="false"
            android:textSize="40dp"
            android:background="@android:color/transparent"
            android:onClick="currNbtn"
            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
            android:textColor="#fff" />

        <Button
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:text="0"
            android:id="@+id/btn_zero"
            android:elegantTextHeight="false"
            android:textSize="40dp"
            android:background="@android:color/transparent"
            android:onClick="currNbtn"
            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
            android:textColor="#fff" />

        <Button
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:text="="
            android:id="@+id/btn_eq"
            android:elegantTextHeight="false"
            android:textSize="40dp"
            android:background="@android:color/transparent"
            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
            android:textColor="#fff"
            android:onClick="currOPbtn" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="65dp"
        android:layout_height="match_parent"
        android:id="@+id/linearLayout4"
        android:background="#817e7e"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/linearLayout2"
        android:layout_toEndOf="@+id/linearLayout2"
        android:layout_below="@+id/linearLayout6"
        android:layout_alignRight="@+id/linearLayout6"
        android:paddingRight="25dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:text="CLR"
            android:id="@+id/btn_clr"
            android:background="@android:color/transparent"
            android:onClick="CLRbtn"
            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
            android:textColor="#fff"
            android:nestedScrollingEnabled="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:text="/"
            android:id="@+id/btn_dev"
            android:background="@android:color/transparent"
            android:onClick="currOPbtn"
            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
            android:textColor="#fff" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:text="X"
            android:id="@+id/btn_mlt"
            android:background="@android:color/transparent"
            android:onClick="currOPbtn"
            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
            android:textColor="#fff" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:text="-"
            android:id="@+id/btn_min"
            android:background="@android:color/transparent"
            android:onClick="currOPbtn"
            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
            android:textColor="#fff" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:text="+"
            android:id="@+id/btn_pls"
            android:background="@android:color/transparent"
            android:onClick="currOPbtn"
            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
            android:textColor="#fff" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="20dp"
        android:layout_height="match_parent"
        android:background="#d369c9"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/linearLayout6"></LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="262dp"
        android:layout_height="90dp"
        android:id="@+id/linearLayout"
        android:layout_above="@+id/linearLayout2"
        android:layout_toLeftOf="@+id/linearLayout4"
        android:layout_toStartOf="@+id/linearLayout4">

        <Button
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:text="7"
            android:id="@+id/btn_7"
            android:elegantTextHeight="false"
            android:textSize="40dp"
            android:background="@android:color/transparent"
            android:onClick="currNbtn"
            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
            android:textColor="#fff" />

        <Button
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:text="8"
            android:id="@+id/btn_8"
            android:elegantTextHeight="false"
            android:textSize="40dp"
            android:background="@android:color/transparent"
            android:onClick="currNbtn"
            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
            android:textColor="#fff" />

        <Button
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:text="9"
            android:id="@+id/btn_9"
            android:elegantTextHeight="false"
            android:textSize="40dp"
            android:background="@android:color/transparent"
            android:onClick="currNbtn"
            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
            android:textColor="#fff" />

    </LinearLayout>

</RelativeLayout>
